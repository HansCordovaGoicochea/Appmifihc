<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:background="?android:selectableItemBackgroundBorderless"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/style_border_cardview">

        <ImageView
            android:id="@+id/salesImageView"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/plazo_fijo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18sp"
            android:layout_toRightOf="@id/salesImageView">

            <customfonts.MyTextView_Poppins_Medium
                style="@style/reportContentText"
                android:text="Plazo Fijo"
                android:textColor="@color/colorPrimary"/>

            <customfonts.MyTextView_Poppins_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.5sp"
                android:textColor="#002C56"
                android:text="12321123"
                />

            <customfonts.MyTextView_Poppins_Medium
                style="@style/viewParent.headerText"
                android:textSize="19sp"
                android:text="S/ 1000.22"/>

        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:src="@drawable/ic_right_icon"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginRight="10dp"/>

</androidx.cardview.widget.CardView>


